{
  "name": "FastAPI Backend",
  "dockerComposeFile": "../docker-compose.yml",
  "workspaceFolder": "/usr/src/main",
  "service": "backend",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "bierner.markdown-mermaid",
        "charliermarsh.ruff",
        "esbenp.prettier-vscode",
        "github.copilot-chat",
        "github.vscode-github-actions",
        "mechatroner.rainbow-csv",
        "mhutchie.git-graph",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.isort",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow"
      ]
    }
  },
  "forwardPorts": [8000],
  "remoteUser": "root",
  "mounts": ["source=${localWorkspaceFolder},target=/usr/src/main,type=bind,consistency=cached"],
  "postCreateCommand": "Welcome to FastAPI Backend"
}
