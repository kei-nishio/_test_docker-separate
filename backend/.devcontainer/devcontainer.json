{
  "name": "FastAPI Backend",
  "dockerComposeFile": "../docker-compose.yml",
  "workspaceFolder": "/workspace",
  "service": "backend",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.black-formatter", "ms-python.isort", "ms-python.flake8", "github.copilot-chat", "github.vscode-github-actions", "mhutchie.git-graph", "bierner.markdown-mermaid", "esbenp.prettier-vscode", "mechatroner.rainbow-csv"]
    }
  },
  "forwardPorts": [8000],
  "remoteUser": "root",
  "mounts": ["source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"],
  "postCreateCommand": "Welcome to FastAPI Backend"

}
